# ==============================================================================
# SQL Server Connection - Dashboard Database
# ==============================================================================
# NOTE: The code uses "ODBC Driver 17 for SQL Server" by default.
# If you need Driver 18, update database.py get_connection_string() function.
DB_SERVER=your-sql-server.database.windows.net
DB_DATABASE=YourDatabaseName
DB_USER=YourDatabaseUser
DB_PASSWORD=YourSecurePassword

# ==============================================================================
# SQL Server Connection - Persistence Store Database (Token Validation)
# ==============================================================================
PERSISTENCE_DB_SERVER=your-sql-server.database.windows.net
PERSISTENCE_DB_DATABASE=YourPersistenceDatabaseName
PERSISTENCE_DB_USER=YourDatabaseUser
PERSISTENCE_DB_PASSWORD=YourSecurePassword

# ==============================================================================
# Bizuit Dashboard API (for authentication)
# ==============================================================================
BIZUIT_DASHBOARD_API_URL=https://your-bizuit-instance.com/api

# ==============================================================================
# Admin Security Configuration
# ==============================================================================
# Comma-separated list of roles allowed to access admin panel
ADMIN_ALLOWED_ROLES=Administrators,BIZUIT Admins,SuperAdmin,FormManager

# Session timeout in minutes (default: 30)
SESSION_TIMEOUT_MINUTES=30

# JWT Secret Key for session tokens
# IMPORTANT: Generate a strong random secret with: openssl rand -hex 32
# NEVER use the same secret in multiple environments
JWT_SECRET_KEY=REPLACE_WITH_OUTPUT_OF_openssl_rand_hex_32

# TripleDES Encryption Key for Dashboard token validation
# IMPORTANT: Must be exactly 24 characters
# CRITICAL: This must match the encryption key used by Bizuit Dashboard
# Contact your Bizuit Dashboard administrator for the correct key
ENCRYPTION_TOKEN_KEY=REPLACE_WITH_24_CHAR_KEY

# ==============================================================================
# API Configuration
# ==============================================================================
API_PORT=8000
MAX_UPLOAD_SIZE_MB=50
TEMP_UPLOAD_PATH=./temp-uploads

# ==============================================================================
# CORS Configuration
# ==============================================================================
CORS_ORIGINS=http://localhost:3001,http://localhost:3000
