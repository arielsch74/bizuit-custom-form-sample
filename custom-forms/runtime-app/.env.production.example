# Production Environment Variables for Runtime App
# Copy this file as .env.local on the server after deployment

# Base path for IIS deployment
NEXT_PUBLIC_BASE_PATH=/arielschBIZUITCustomForms

# Bizuit BPM Dashboard API URL (browser connects to Bizuit BPM, not FastAPI)
NEXT_PUBLIC_BIZUIT_DASHBOARD_API_URL=/arielschbizuitdashboardapi/api

# FastAPI Backend URL (REQUIRED - server-side only, used by Next.js API routes)
# In production, this should point to localhost where PM2 runs the FastAPI backend
FASTAPI_URL=http://127.0.0.1:8000

# Timeouts and configuration
NEXT_PUBLIC_BIZUIT_TIMEOUT=30000
NEXT_PUBLIC_BIZUIT_TOKEN_EXPIRATION_MINUTES=1440

# Session timeout for admin panel
NEXT_PUBLIC_SESSION_TIMEOUT_MINUTES=30

# Webhook secret for deployment triggers (generate with: openssl rand -hex 32)
WEBHOOK_SECRET=change-this-in-production

# Environment
NODE_ENV=production
