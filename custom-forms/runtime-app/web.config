<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  <system.webServer>
    <!-- URL Rewrite rules for reverse proxy -->
    <rewrite>
      <rules>
        <!-- Rule 1: Proxy deployment API (FastAPI) -->
        <rule name="Deployment API (FastAPI)" stopProcessing="true">
          <match url="^api/deployment/(.*)" />
          <conditions logicalGrouping="MatchAll" trackAllCaptures="false">
            <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="true" />
            <add input="{REQUEST_FILENAME}" matchType="IsDirectory" negate="true" />
          </conditions>
          <action type="Rewrite" url="http://localhost:8000/api/deployment/{R:1}" />
          <serverVariables>
            <set name="HTTP_X_ORIGINAL_HOST" value="{HTTP_HOST}" />
          </serverVariables>
        </rule>

        <!-- Rule 2: Proxy Next.js runtime app -->
        <rule name="Next.js Runtime App" stopProcessing="true">
          <match url="(.*)" />
          <conditions logicalGrouping="MatchAll" trackAllCaptures="false">
            <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="true" />
            <add input="{REQUEST_FILENAME}" matchType="IsDirectory" negate="true" />
            <!-- Don't proxy system resources -->
            <add input="{REQUEST_URI}" pattern="^/pm2" negate="true" />
          </conditions>
          <action type="Rewrite" url="http://localhost:3001/{R:1}" />
        </rule>
      </rules>
    </rewrite>

    <!-- Allow all HTTP methods (needed for PUT, DELETE, etc) -->
    <security>
      <requestFiltering>
        <verbs allowUnlisted="true" />
        <!-- Increase max upload size for deployment packages (100 MB) -->
        <requestLimits maxAllowedContentLength="104857600" />
      </requestFiltering>
    </security>

    <!-- Custom headers -->
    <httpProtocol>
      <customHeaders>
        <remove name="X-Powered-By" />
        <add name="X-Powered-By" value="BIZUIT Custom Forms Runtime" />
      </customHeaders>
    </httpProtocol>

    <!-- Default document -->
    <defaultDocument>
      <files>
        <clear />
        <add value="index.html" />
      </files>
    </defaultDocument>

    <!-- Compression -->
    <urlCompression doStaticCompression="true" doDynamicCompression="true" />

    <!-- Application Request Routing (ARR) settings -->
    <!-- Estas configuraciones requieren tener ARR instalado en IIS -->
    <proxy>
      <preserveHostHeader>false</preserveHostHeader>
      <timeout value="00:10:00" />
    </proxy>
  </system.webServer>
</configuration>
