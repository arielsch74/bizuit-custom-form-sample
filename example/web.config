<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  <system.webServer>
    <!-- URL Rewrite rules for Next.js reverse proxy -->
    <rewrite>
      <rules>
        <!-- Reverse proxy to Next.js app running on localhost:3000 -->
        <rule name="Next.js App" stopProcessing="true">
          <match url="(.*)" />
          <conditions logicalGrouping="MatchAll" trackAllCaptures="false">
            <!-- Don't proxy if accessing PM2 or other system resources -->
            <add input="{REQUEST_URI}" pattern="^/pm2" negate="true" />
          </conditions>
          <action type="Rewrite" url="http://localhost:3000/BIZUITCustomForms/{R:1}" />
        </rule>
      </rules>
    </rewrite>

    <!-- Allow all HTTP methods -->
    <security>
      <requestFiltering>
        <verbs allowUnlisted="true" />
      </requestFiltering>
    </security>

    <!-- Custom headers for Next.js -->
    <httpProtocol>
      <customHeaders>
        <add name="X-Powered-By" value="Next.js" />
      </customHeaders>
    </httpProtocol>

    <!-- Default document -->
    <defaultDocument>
      <files>
        <clear />
        <add value="index.html" />
      </files>
    </defaultDocument>

    <!-- Static compression -->
    <urlCompression doStaticCompression="true" doDynamicCompression="true" />
  </system.webServer>
</configuration>
